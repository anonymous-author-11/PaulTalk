<?xml version="1.0" ?>
<interface
  xmlns="http://zero-install.sourceforge.net/2004/injector/interface"
  xmlns:compile="http://zero-install.sourceforge.net/2006/namespaces/0compile"
  uri="http://foo.bar/build">
  <name>DoCompile</name>
  <summary>Runs the PaulTalk compiler on MAIN_FILE_PATH to produce BIN_NAME.exe, making use of any DEPDENDENCIES</summary>

  <implementation id="." arch="*-src" version="1.0.1">
    <command name='compile' path='c:/windows/py.exe'>
      <arg>c:/users/paulk/onedrive/documents/pl/pypl/compiler.py</arg>
      <arg>MAIN_FILE_PATH</arg>
      <arg>-o</arg>
      <arg>$DISTDIR/BIN_NAME.exe</arg>
      <arg>--build-dir</arg>
      <arg>$BUILDDIR</arg>
      <compile:implementation arch='*-*'>
        <command name='run' path='BIN_NAME.exe' />
      </compile:implementation>
    </command>
    DEPENDENCIES
  </implementation>
</interface>